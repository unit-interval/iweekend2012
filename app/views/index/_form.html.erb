<%= form_for @participant, :url => apply_path, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @participant.errors.any? %>
    <div id="error_explanation" class="validation-error">
      <h2><%= pluralize(@participant.errors.count, "error") %> found:</h2>
      <ul>
      <% @participant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, '姓名', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, '邮箱', :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_confirmation, '确认邮箱', :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email_confirmation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :occupation, '职业', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :occupation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :organization, '所在组织', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :organization, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.check_box :pitching_idea, :class => 'text_field' %>
      <span>我会带着自己的想法来</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :idea_desc, '请在 300 字之内简单介绍你的想法', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :idea_desc, :size => '60x5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bio, '你希望在 iWeekend 学到什么，有什么是你能够带给 iWeekend 的？', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :bio, :size => '60x5' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
