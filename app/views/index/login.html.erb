<h1>登录</h1>
<% if notice %>
  <p><%= notice %></p>
<% end %>
<%= form_tag signin_path, :method => "post", :class => 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag :password, 'password', :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
